{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|implement",
        "hooks": [
          {
            "type": "command",
            "command": "pnpm format && pnpm lint --fix"
          }
        ]
      },
      {
        "matcher": "implement|run|test",
        "onErrorRegex": "Missing[^\\n]*|Cannot\\sfind|is\\snot\\sdefined",
        "hooks": [
          {
            "type": "command",
            "command": "claude $CLAUDE_PREV_TOOL $CLAUDE_PREV_ARGS --c7"
          }
        ]
      }
    ]
  },
  "enabledMcpjsonServers": [
    "c7",
    "gh",
    "seq",
    "pup",
    "magic"
  ],
  "enableAllProjectMcpServers": false,
  "components": {
    "core": {
      "version": "3.0.0",
      "installed_at": "2025-07-20T08:52:56.096556",
      "category": "core"
    },
    "commands": {
      "version": "3.0.0",
      "installed_at": "2025-07-20T08:52:56.103251",
      "category": "commands"
    }
  },
  "framework": {
    "components": [
      "core",
      "commands"
    ]
  },
  "permissions": {
    "defaultMode": "ask",
    "allow": [
      "Edit",
      "Bash(gh issue view:*)",
      "Bash(gh issue create:*)",
      "Bash(gh issue comment:*)",
      "Bash(gh issue edit:*)",
      "Bash(gh pr checkout:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr review:*)",
      "Bash(gh repo view:*)",
      "Bash(gh search prs:*)",
      "Bash(jq:*)",
      "Bash(git status)",
      "Bash(git rev-parse:*)"
    ],
    "deny": [
      "Bash(sudo:*)",
      "Bash(rm -rf:*)",
      "Bash(rm -r /*)",
      "Bash(chmod -R:*)",
      "Bash(chown -R:*)",
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Bash(ssh:*)",
      "Bash(brew:*)",
      "Bash(apt-get:*)",
      "Bash(yum:*)",
      "Bash(pip install:*)",
      "Bash(git push --force origin main)",
      "Bash(git push --force)"
    ],
    "additionalDirectories": []
  }
}
