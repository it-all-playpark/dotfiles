{
  "mcpServers": {
    "aggregator": {
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-v",
        "$HOME/.config/claude/mcp:/config",
        "-e",
        "GITHUB_PAT",
        "ghcr.io/sparfenyuk/mcp-proxy:latest",
        "--port=12006",
        "--named-server-config",
        "/config/servers.json"
      ]
    }
  }
}
