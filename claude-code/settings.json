      "Bash(apt-get:*)",
      "Bash(yum:*)",
      "Bash(pip install:*)",
      "Bash(pip3 install:*)",
      "Bash(pipx install:*)",
      "Bash(dd:*)",
      "Bash(mkfs:*)",
