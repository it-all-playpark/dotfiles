      "Bash(systemctl shutdown:*)",
      "Bash(systemctl poweroff:*)",
      "Bash(systemctl halt:*)",
      "Bash(mv /*:*)",
      "Bash(mv * /:*)",
      "Bash(cp /*:*)",
      "Bash(cp * /:*)",
      "Bash(cp -R * /:*)",
      "Bash(rsync /*:*)",
      "Bash(rsync * /:*)",
