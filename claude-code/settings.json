      "Bash(parted:*)",
      "Bash(cfdisk:*)",
      "Bash(sfdisk:*)",
      "Bash(gdisk:*)",
      "Bash(sgdisk:*)",
      "Bash(diskutil:*)",
      "Bash(format:*)",
      "Bash(kill -9 -1:*)",
      "Bash(kill -9 1:*)",
      "Bash(kill -KILL -1:*)",
      "Bash(kill -KILL 1:*)",
      "Bash(kill -TERM -1:*)",
      "Bash(killall -KILL:*)",
      "Bash(killall -TERM:*)",
      "Bash(pkill -KILL:*)",
      "Bash(pkill -TERM:*)",
      "Bash(killall -9:*)",
      "Bash(pkill -9:*)",
      "Bash(reboot:*)",
      "Bash(shutdown:*)",
