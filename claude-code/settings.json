      "Bash(launchctl unload:*)",
      "Bash(launchctl load:*)",
      "Bash(defaults write:*)",
      "Bash(scutil:*)",
      "Bash(nvram:*)",
      "Bash(csrutil:*)",
      "Bash(spctl:*)",
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)"
    ],
    "additionalDirectories": []
  },
  "attribution": {
    "commit": "",
    "pr": ""
  },
  "language": "ja"
}
